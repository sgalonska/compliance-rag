# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=compliance_rag
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-use-at-least-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000", "https://your-domain.com"]

# LLM Configuration
LLM_PROVIDER=ollama

# Ollama Local LLM Settings
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Local Embedding Settings  
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_EMBEDDING_DEVICE=cpu

# Qdrant Vector Database (optional - uses in-memory if not provided)
QDRANT_URL=
QDRANT_API_KEY=
COLLECTION_NAME=compliance_documents

# OpenAI Configuration (fallback - optional)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4-turbo-preview

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Application Settings
PROJECT_NAME=Compliance RAG
VERSION=1.0.0
API_V1_STR=/api/v1

# Environment
ENVIRONMENT=development